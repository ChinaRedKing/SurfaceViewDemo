<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/control_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/start_click"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="18dp"
        android:background="#00ff00"
        android:text="开始"/>

    <TextView
        android:id="@+id/resume_click"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="18dp"
        android:background="#00ffff"
        android:text="恢复"/>

    <TextView
        android:id="@+id/pause_click"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="18dp"
        android:background="#ff0000"
        android:text="暂停"/>

    </LinearLayout>

    <demo.dai.com.surfaceviewdemo.TranslateSurfaceView
        android:id="@+id/translate_view"
        android:layout_below="@id/control_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_below="@id/control_layout"
        android:background="#9fcf9f"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
